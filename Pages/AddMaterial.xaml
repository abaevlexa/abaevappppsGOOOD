<Window x:Class="abaevapppps.Pages.AddMaterial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abaevapppps.Pages"
        mc:Ignorable="d"
        Title="AddMaterial" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Label FontSize="16" FontWeight="Bold">Наименование профессии:</Label>
            <TextBox Name="TxbTitle" Height="31"/>
            <Label FontSize="16" FontWeight="Bold">Дата регистрации:</Label>
            <TextBox Name="TxbDate" Height="33"/>
            <Label FontSize="16" FontWeight="Bold">Зарплата:</Label>
            <TextBox Name="TxbCost" Height="33"/>
            <Label FontSize="16" FontWeight="Bold">Фотография:</Label>
            <TextBox Name="TxbImage" Height="33"/>
            <Label FontSize="16" FontWeight="Bold">Номер рабочего:</Label>
            <TextBox Name="TxbDetailId" Height="33"/>


            <Button Content="Создать" Name="BtnCreate"
                     Width="568" 
                    Margin="15"
                    HorizontalAlignment="Right" Height="29" Click="BtnCreate_Click"/>
        </StackPanel>
    </Grid>
</Window>
