<Page x:Class="abaevapppps.Pages.PageProd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:abaevapppps.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="800"
      Title="PageProd">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="25" Grid.ColumnSpan="2">Продукты</TextBlock>
        <DataGrid Margin="10,57,109.773,27"></DataGrid>
        <StackPanel Grid.Column="1">
            <TextBlock FontSize="25"  Grid.Column="1">Добавьте свой продукт</TextBlock>
        <TextBlock FontSize="25"  Grid.Column="1">Название</TextBlock>
        <TextBox Name="TxbName"  Grid.Column="1"></TextBox>
        
        <TextBlock FontSize="25"  Grid.Column="1">Цена</TextBlock>
         <TextBox Name="TxbPrice"  Grid.Column="1"></TextBox>   
        <Button Name="BtnAdd"  FontSize="20" Grid.Column="1" Click="BtnAdd_Click">Добавить</Button>
        <Button Name="BtnDelete"  FontSize="20" Grid.Column="1" Click="BtnDelete_Click">Удалить</Button>
        </StackPanel>
        
    </Grid>
</Page>
